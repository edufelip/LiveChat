rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isDeleted(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.is_deleted == true;
    }

    function isActiveUser(uid) {
      return isSignedIn() && !isDeleted(uid);
    }

    function isInboxOwner(conversationId) {
      return isActiveUser(request.auth.uid) && request.auth.uid == conversationId;
    }

    function isValidMessage(data, conversationId) {
      return data.sender_id is string
        && data.receiver_id == conversationId
        && data.type in ['text', 'image', 'audio']
        && data.content is string
        && data.status in ['pending', 'sent', 'delivered']
        && data.created_at is timestamp
        && (!('created_at_ms' in data) || data.created_at_ms is int);
    }

    match /users/{userId} {
      allow read, write: if isActiveUser(userId) && request.auth.uid == userId;
    }

    match /users/{userId}/settings/{settingsId} {
      allow read, write: if isActiveUser(userId) && request.auth.uid == userId;
    }

    match /conversations/{conversationId} {
      // Conversation ID is the recipient user ID.
      allow read: if isInboxOwner(conversationId);
      allow create, update: if isActiveUser(request.auth.uid);
      allow delete: if isInboxOwner(conversationId);

      match /messages/{messageId} {
        // Only the inbox owner can read or delete.
        allow read, delete: if isInboxOwner(conversationId);

        // Any authenticated sender can enqueue a message to a recipient inbox.
        allow create:
          if isActiveUser(request.auth.uid)
            && request.resource.data.sender_id == request.auth.uid
            && isValidMessage(request.resource.data, conversationId);
      }
    }
  }
}
